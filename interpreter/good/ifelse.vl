function assert(bool cond) {
	if (cond) {
		print("OK!\n");
	} else {
		print("ASSERTION FAILED :(\n");
	}
};

// If else tests
int checker;
checker = 10;
if (true) {
	checker = 123;
};
assert(checker == 123);

bool x;
x = false;
if (!x) {
	checker = 321;
};
assert(checker == 321);

if (5 > 4) {
	checker = 789;
} else {
	checker = 987;
};
assert(checker == 789);

int x2;
x2 = 10;
x2++;

assert(x2 == 11);